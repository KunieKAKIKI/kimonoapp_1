<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="jumbotron input_area">
  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :title, id: :item_title , placeholder: '名前' %>
  </div>

  <div class="field">
    <%= form.label :分類 %>
    <%= select_tag 'category[id]', options_from_collection_for_select(Category.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :image, id: :item_image %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :content, id: :item_content, placeholder: '説明、覚書など' %>
  </div>

  <div class="actions">
    <%= form.submit "登録"%>
  </div>
</div>
<% end %>
