<h2>ログイン</h2>
<div class="jumbotron input_area">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: "input100" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード', class: "input60" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      ログインを保持する
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
